<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragment.CreateNoteBook"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/create_iv_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_130sdp"
                android:src="@drawable/color_5"/>
            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/create_iv_image"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignBottom="@id/create_iv_image"
                android:background="@color/white"/>
            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_alignBottom="@id/create_iv_image"/>
            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/white"
                android:layout_toEndOf="@id/view1"
                android:layout_alignBottom="@id/create_iv_image"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_30sdp"/>
            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/white"
                android:layout_toEndOf="@id/view2"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_alignBottom="@id/create_iv_image"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:hint="Notebook Tilte">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="Save"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/create_cv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_30sdp">
            <ImageView
                android:id="@+id/color_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circal_color_1"/>
            <ImageView
                android:id="@+id/color_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circal_color_2"/>
            <ImageView
                android:id="@+id/color_3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circal_color_3"/>
            <ImageView
                android:id="@+id/color_4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/circal_color_4"/>
            <ImageView
                android:id="@+id/color_5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/circal_color_5"/>
            <ImageView
                android:id="@+id/color_6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circal_color_6"/>

            <ImageView
                android:id="@+id/color_7"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circal_color_7"/>

            <ImageView
                android:id="@+id/color_8"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circal_color_8"/>

            <ImageView
                android:id="@+id/color_9"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circal_color_9"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>