<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9">

            <ImageView
                android:id="@+id/note_item_icon"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/color_3" />

            <TextView
                android:id="@+id/note_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/note_item_icon"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="-6.5dp"
                android:layout_toEndOf="@id/note_item_icon"
                android:hint="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />



            <TextView
                android:id="@+id/note_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item_icon"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="2"
                android:hint="enter your note content here"
                android:textSize="@dimen/_17ssp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>